<ivysettings>
    <settings defaultResolver="chained"/>
    <resolvers>
        <filesystem name="local">
            <artifact pattern="${ivy.settings.dir}/ivy-filesystem-resolver-repo/[artifact]-[revision].[ext]"/>
        </filesystem>
        <ibiblio name="central" m2compatible="true"/>        
        <chain name="chained" returnFirst="true">
            <resolver ref="local"/>
            <resolver ref="central"/>            
        </chain>
    </resolvers>
</ivysettings>
