<?xml version="1.0" encoding="UTF-8"?>
<datasources>
<datasource jta="true" jndi-name="jdbc/auth" pool-name="authPool" enabled="true" use-ccm="false">
      <connection-url>jdbc:postgresql://localhost:5432/gaia-auth</connection-url>
      <driver-class>org.postgresql.Driver</driver-class>
      <driver>postgresql9.1</driver>
      <security>
        <user-name>gaia-user</user-name>
        <password>gaia-user-pwd</password>
        </security>
        <validation>
        <validate-on-match>false</validate-on-match>
        <background-validation>false</background-validation>
        </validation>
        <statement>
        <share-prepared-statements>false</share-prepared-statements>
        </statement>
</datasource>
</datasources> 