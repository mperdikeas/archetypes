<project name="sso-caching-ejb" basedir="." default="rejar">

    <!-- Project settings -->
    <property name="ejb-project.name"     value="${project.distname}-ejb"/>

    <!-- Local system paths -->
    <property file="build.properties"/>
    <property name="build.dir" value="build"/>
    <property name="dist.dir" value="dist"/>
    <property name="src.dir" value="${basedir}/src"/>
    <property name="conf.dir" value="${src.dir}/conf"/>
    <property name="javasource.dir" value="${src.dir}/java"/>
    <property name="compilelibs.dir" value="${basedir}/lib"/>

    <path id = "compile.classpath">
      <fileset dir="${compilelibs.dir}">
        <include name ="*.jar"/>
      </fileset>
    </path>


    <!-- Check timestamp on files -->
    <target name="prepare">
        <tstamp/>
    </target>

    <!-- Normal build of application -->
    <target name="compile" depends="prepare"
            description="Compile java sources">
        <mkdir  dir="${build.dir}"/>
        <javac srcdir="${javasource.dir}" 
               destdir="${build.dir}"
               source="1.7"
               target="1.7"
               debug="true"
               >
            <include name="**/*.java"/>
            <classpath refid="compile.classpath"/>
        </javac>
        <!--copy file="${conf.dir}/persistence.xml"       todir="${build.dir}/META-INF"/-->
        <if>
            <equals arg1="${deploy-datasource}" arg2="true" />
            <then>
                <echo message="**** datasource file to deployment location"/>
                <copy file="${conf.dir}/hsqldb_foo-ds.xml"     todir="${build.dir}/META-INF"/>
            </then> 
        </if>

        <!--copy file="${conf.dir}/postgresql_foo-ds.xml" todir="${build.dir}/META-INF"/-->
    </target>

    <target name="jar" depends="compile"
            description="jar class files">
      <mkdir  dir="${dist.dir}"/>
      <jar destfile="${dist.dir}/${ejb-project.name}.jar"
           basedir="${build.dir}"
      />
    </target>

    <target name="clean"
            description="Prepare for clean build">
      <delete dir="${build.dir}"/>
      <delete dir="${dist.dir}"/>
    </target>

    <!-- Rebuild project -->
    <target name="rejar" depends="clean,jar" description="clean and jar anew"/>
</project>
