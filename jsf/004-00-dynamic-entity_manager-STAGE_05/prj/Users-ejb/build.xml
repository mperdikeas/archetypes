<project name="Users-ejb" basedir="." default="rejar">

    <!-- Project settings -->
    <property name="project.distname" value="${ant.project.name}"/>

    <!-- Local system paths -->
    <property file="build.properties"/>
    <property name="build.dir" value="build"/>
    <property name="jarlib.dir" value="${build.dir}/lib"/>
    <property name="dist.dir" value="dist"/>
    <property name="src.dir" value="${basedir}/src"/>
    <property name="conf.dir" value="${src.dir}/conf"/>
    <property name="javasource.dir" value="${src.dir}/java"/>
    <property name="compilelibs.dir" value="${basedir}/lib"/>

    <property name="client-project.name" value="Users-client"/>
    <property name="client-project.dir"  value="${basedir}/../${client-project.name}"/>
    <property name="client-lib.dir" value="${basedir}/../Users-client/dist"/>
    <property name="client-lib.jar" value="Users-client.jar"/>

    <path id = "compile.classpath">
      <fileset dir="${compilelibs.dir}">
        <include name ="*.jar"/>
      </fileset>
      <fileset dir="${client-lib.dir}">
        <include name ="${client-lib.jar}"/>
      </fileset>
    </path>


    <!-- Check timestamp on files -->
    <target name="prepare">
        <tstamp/>
    </target>

    <target name="jar-client">
      <ant antfile = "${client-project.dir}/build.xml" target="jar" inheritAll="false"/>
    </target>

    <!-- Normal build of application -->
    <target name="compile" depends="prepare, jar-client"
            description="Compile java sources">
        <mkdir  dir="${build.dir}"/>
        <javac srcdir="${javasource.dir}" 
               destdir="${build.dir}"
               source="1.7"
               target="1.7"
               debug="true"
               >
            <include name="**/*.java"/>
            <classpath refid="compile.classpath"/>
        </javac>
        <copy file="${conf.dir}/persistence.xml" todir="${build.dir}/META-INF"/>
        <copy file="${conf.dir}/postgres-ds.xml" todir="${build.dir}/META-INF"/>
    </target>

    <target name="jar" depends="compile"
            description="jar class files">
      <mkdir  dir="${dist.dir}"/>
      <copy file="${client-lib.dir}/${client-lib.jar}" todir="${jarlib.dir}"/>

      <!-- create a property containing all .jar files, prefix lib/, and seperated with a space -->
      <pathconvert property="libs.project" pathsep=" ">
        <mapper>
          <chainedmapper>
     
            <!-- remove absolute path -->
            <flattenmapper />
     
            <!-- add lib/ prefix -->
            <globmapper from="*" to="lib/*" />
          </chainedmapper>
        </mapper>
     
        <path>
     
          <!-- lib.home contains all jar files, in several subdirectories -->
          <fileset dir="${jarlib.dir}">
            <include name="**/*.jar" />
          </fileset>
        </path>
      </pathconvert>

      <jar destfile="${dist.dir}/${project.distname}.jar"
           basedir="${build.dir}">
        <manifest>
          <attribute name="Class-Path" value="${libs.project}" />
        </manifest>
      </jar>
    </target>


    <target name="clean"
            description="Prepare for clean build">
      <delete dir="${build.dir}"/>
      <delete dir="${dist.dir}"/>
    </target>

    <!-- Rebuild project -->
    <target name="rejar" depends="clean,jar" description="clean and jar anew"/>

</project>
