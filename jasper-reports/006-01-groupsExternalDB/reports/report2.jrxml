	<queryString>
		<![CDATA[select trgr.trgr_id, trgr.trgr_name,
	(select sum(tran.tran_value) from km_transactions tran where tran.trgr_credited_id = trgr.trgr_id) sum_eispraxi,
	(select sum(tran.tran_value) from km_transactions tran where tran.trgr_debited_id = trgr.trgr_id) sum_plirommi
from km_transaction_groups trgr
where (trgr.trgt_id = $P{p_tg_type}
	or
      (trgr.trgt_id in (-1, 1) and $P{p_tg_type} = 1)
	)
	and trgr.cafl_id = $P{p_cafl_id}
	and exists (select 1 from km_transactions tran where tran.trgr_credited_id = trgr.trgr_id
						  or tran.trgr_debited_id = trgr.trgr_id)
order by trgr.trgr_print_order]]>
	</queryString>
